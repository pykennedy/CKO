<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/shrunk"
        motion:constraintSetStart="@+id/original"
        app:motionInterpolator="linear">
        <OnSwipe
            app:dragDirection="dragUp"
            app:onTouchUp="stop"
            motion:touchAnchorId="@+id/rv_comments"/>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/hidden"
        motion:constraintSetStart="@+id/shrunk"
        app:motionInterpolator="linear">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorSide="bottom"
            app:onTouchUp="stop"
            motion:touchAnchorId="@+id/rv_comments"/>
    </Transition>

    <ConstraintSet android:id="@+id/original">
        <Constraint
            android:id="@+id/mcv_frame"
            android:layout_width="0dp"
            android:layout_height="500dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/shrunk">
        <Constraint
            android:id="@+id/mcv_frame"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/hidden">
        <Constraint
            android:id="@+id/mcv_frame"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="parent"/>
    </ConstraintSet>
</MotionScene>